generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Blog {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String    @unique
  content       String    @db.Text
  excerpt       String    @db.VarChar(300) // for SEO-friendly summary
  featuredImage String? // URL to featured image (important for SEO & Open Graph)
  metaTitle     String?   @db.VarChar(70) // SEO title (recommended ~60 chars)
  metaDesc      String?   @db.VarChar(160) // SEO description (recommended 150-160 chars)
  tags          String    @db.Text // for keyword targeting, stored as comma-separated values
  author        User      @relation(fields: [authorId], references: [id])
  authorId      Int
  published     Boolean   @default(false)
  publishedAt   DateTime? // Important for SEO timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([slug])
  @@index([published, publishedAt])
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  blogs     Blog[]
  createdAt DateTime @default(now())
}
